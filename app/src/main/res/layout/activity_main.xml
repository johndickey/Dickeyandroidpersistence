<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.john.dickeyandroidpersistence.MainActivity">

    <Button
        android:id="@+id/addtrophybutton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="463dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="Add Trophy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
        android:onClick="onClick"/>

    <Button
        android:id="@+id/increaseskills"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="32dp"
        android:text="Increase Skills"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="108dp" />
        android:onClick="onClick"/>
    <TextView
        android:id="@+id/result"
        android:layout_width="272dp"
        android:layout_height="47dp"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="189dp" />
</android.support.constraint.ConstraintLayout>
